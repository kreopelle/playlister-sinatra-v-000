<h1>Create a New Song</h1>

<form action="/songs/:slug" method="POST">
  <label for="song_name">Name:</label>
  <input type="text" name="song[name]" id="song_name">
  <br></br>
  <label for="artist_name">Artist Name:</label>
  <input type="text" name="song[artist][name]" id="artist_name">
  <br></br>
  Genres:
  <br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name%></input><br>
  <%end%>
  <br></br>
  <input type="submit" value="Create">
</form>
